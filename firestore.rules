rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write only their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Albums can be read by any authenticated user OR the server (Cloud Functions)
    match /albums/{albumId} {
      allow read: if request.auth != null || request.time != null;
      allow write: if request.auth != null;
    }

    // Photo access rules:
    // - Any authenticated user (or Cloud Functions) can read photo metadata
    // - Only users with the 'uploader' custom claim can create new photo documents
    // - Only users with the 'admin' custom claim can update photos (e.g., set featured status)
    // - Deletion of photos is currently restricted to prevent accidental loss; handled via backend if needed
    match /photos/{photoId} {
      allow read: if request.auth != null || request.time != null;
      allow update: if request.auth.token.admin == true;
      allow create: if request.auth.token.uploader == true;
      allow delete: if false;
    }


    // Featured content can be read by anyone (public)
    match /featured/{docId} {
      allow read: if true;
    }
  }
}
